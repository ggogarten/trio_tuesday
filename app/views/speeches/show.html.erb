<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @speech.date %>
</p>

<p>
  <strong>Text:</strong>
  <%= @speech.text %>
</p>

<p>
  <strong>Candidate:</strong>
  <%= @speech.candidate.name %>
</p>
<br>
<p>
  <strong>Concept Count: </strong><%= @speech.concepts.count %>
</p>

<table>
  <thead>
    <tr>
      <th>Concept</th>
      <th>Relevance</th>
    </tr>
  </thead>
  <tbody>
    <% @speech.concepts.each do |concept| %>
    <tr>
      <td><%= concept.idea %></td>
      <td><%= '%.2f' % (concept.relevance) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_speech_path(@speech) %>
<%= link_to 'Back', {controller: 'candidates', action: 'show', id: "#{@speech.candidate_id}"} %>
<%= link_to 'New Watson', "#{@speech.id}/analyze" %>
